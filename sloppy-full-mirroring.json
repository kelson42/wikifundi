{
  "project": "wikifundi",
  "services":[
    {
        "id": "wikifundi",
        "apps": [
            {
                "id": "wikifundi-fr",
                "domain": {
                    "uri": "wikifundi-fr.openzim.org"
                },
                "mem": 2048,
                "instances": 1,
                "image": "openzim/wikifundi-fr:latest",
                "port_mappings": [
                    {
                        "container_port": 80
                    }
                ],
                "env": {   
                    "MIRRORING":"1",
                    "CLEAN":"1"
                },                
                "volumes": [
                    {
                        "container_path": "/var/www/data",
                        "size": "24GB"
                    }
                ]
            },
            {
                "id": "wikifundi-en",

                "domain": {
                    "uri": "wikifundi-en.openzim.org"
                },
                "mem": 2048,
                "instances": 1,
                "image": "openzim/wikifundi-en:latest",
                "port_mappings": [
                    {
                        "container_port": 80
                    }
                ],
                "env": {
                    "MIRRORING":"1",
                    "CLEAN":"1"
                },                
                "volumes": [
                    {
                        "container_path": "/var/www/data",
                        "size": "24GB"
                    }
                ]
            }
        ]
    }
  ]
}




